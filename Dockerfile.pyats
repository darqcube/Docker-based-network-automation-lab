FROM python:3.11-slim

WORKDIR /workspace

RUN apt-get update && apt-get install -y git curl build-essential && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

COPY requirements.pyats.txt /workspace/
RUN pip install --no-cache-dir -r requirements.pyats.txt

COPY . /workspace

EXPOSE 5000
CMD ["python", "workflow/pyats_server.py"]